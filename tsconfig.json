{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2015.promise"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "./src/*"
      ]
    },
    "allowJs":true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  },
  "compileOnSave": false
}
